@model IEnumerable<DOT_NET_Examenproject.Models.Offerte>

@{
    ViewData["Title"] = "Invoice";
}

<h1>Invoices</h1>

<p>
    <a asp-action="Create">Create new invoice</a>
</p>

<p>

    <form asp-action="Index" asp-controller="Offertes" method="get">
        Select:
        <input type="text" name="OpzoekVeld" />
        <input type="submit" value="Search" />
    </form>

</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TitelOfferte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotaalBedrag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bedrijf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitelOfferte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotaalBedrag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Klant.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bedrijf.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OfferteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OfferteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OfferteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
